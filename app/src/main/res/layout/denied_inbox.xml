<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/deniedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Jane Smith"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deniedEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: jane.smith@example.com" />

    <TextView
        android:id="@+id/deniedRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Tutor" />

    <Button
        android:id="@+id/approveDeniedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Approve This Request" />
</LinearLayout>
